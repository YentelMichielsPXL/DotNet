<Window x:Class="DominationGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DominationGame"
        mc:Ignorable="d"
        Title="DominationGame" Height="550" Width="800">
    <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Start game" Name ="startGameMenuItem" Click="startGameMenuItem_Click" />
                <MenuItem Header="Moves" Name="movesMenuItem" Click="movesMenuItem_Click" IsEnabled="False"/>
                <MenuItem Header="Exit" Name="exitMenuItem" Click="exitMenuItem_click" />
            </Menu>
            <Grid DockPanel.Dock="Bottom">
                <Canvas Name="paperCanvas" Background="Beige" HorizontalAlignment="Left" Margin="50,23,0,23" Width="370" Height="370" MouseUp="paperCanvas_MouseUp"/>
            <Label Name="playerTurnLabel" HorizontalAlignment="Left" Height="35" Margin="467,73,0,0" VerticalAlignment="Top" Width="294"/>
            <Label Name="positionXLabel" HorizontalAlignment="Left" Height="35" Margin="467,148,0,0" VerticalAlignment="Top" Width="294"/>
            <Label Name="positionYLabel" HorizontalAlignment="Left" Height="35" Margin="467,223,0,0" VerticalAlignment="Top" Width="294"/>


        </Grid>
        </DockPanel>
</Window>
